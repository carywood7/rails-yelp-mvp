<h1><%= @restaurant.name %></h1>
<p class="text-muted mb-1"><strong>Category:</strong> <%= @restaurant.category %></p>
<p class="text-muted"><strong>Address:</strong> <%= @restaurant.address %></p>

<div class="mt-3 mb-4">
  <%= link_to "Back", restaurants_path, class: "btn btn-secondary" %>
  <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to "Delete", restaurant_path(@restaurant),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn btn-danger" %>
</div>

<hr>

<h2>Reviews</h2>

<% if @restaurant.reviews.any? %>
  <div class="list-group mb-3">
    <%= render @restaurant.reviews %>
  </div>
<% else %>
  <p class="text-muted">No reviews yet.</p>
<% end %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-outline-primary" %>
