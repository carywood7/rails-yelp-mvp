<h1>New Review for <%= @restaurant.name %></h1>

<%= form_with model: [@restaurant, @review], local: true do |f| %>
  <% if @review.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(@review.errors.count, "error") %></strong> prevented saving:
      <ul class="mb-0">
        <% @review.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :rating, class: "form-label" %>
    <%= f.number_field :rating, in: 0..5, class: "form-control", step: 1 %>
  </div>

  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, rows: 4, class: "form-control" %>
  </div>

  <%= f.submit "Create Review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to #{@restaurant.name}", @restaurant, class: "btn btn-secondary mt-3" %>
